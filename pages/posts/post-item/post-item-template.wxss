.post-container{
    display: flex;
    flex-direction: column;
    margin-top: 20rpx;
    background: #fff;
     
}

.post-author-date{
    height: 60rpx;
    margin-top: 20rpx;
    margin-bottom: 20rpx;
    
}

.post-author{
    margin-left: 20rpx; 
    margin-right: 20rpx;
    width:60rpx;
    height:60rpx;
    vertical-align: middle;
}

.post-date{ 
    font-size: 26rpx;
    vertical-align: middle;
}

.post-title{
    font-size:34rpx;
    font-weight: bold;
    margin:10px 0 10px 20px;
}

.post-image{
     width: 100%;
     height: 340rpx;
     margin-bottom: 10px;
}

.post-content{
     font-size: 28rpx;
     letter-spacing: 2rpx;
     line-height: 40rpx;
     margin-left: 20rpx;
}

.post-like{
     flex-direction: row;
     margin: 20rpx 0 20rpx 10px;
     font-size: 26rpx;
    
}

.post-like-image{
     width: 30rpx;
     height: 30rpx;
     vertical-align: middle;
     margin-right: 10px;
}

.post-like-font{
     vertical-align: middle;
      margin-right: 20px; 
}